<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>เพิ่มประวัติการรักษา | Dentaist Clinic System</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/public/css/styles.css"/>
</head>
<body>
<div class="container mt-4">
  <h2>เพิ่มประวัติการรักษา: <%= patient.first_name %> <%= patient.last_name %> (HN: <%= patient.clinic_number %>)</h2>
  <hr>

  <form action="/visits" method="POST" id="visit-form" enctype="multipart/form-data">
    <input type="hidden" name="patient_id" value="<%= patient.id %>">

    <div class="row">
      <div class="col-md-4 form-group">
        <label for="visit_date">วันที่รับการรักษา</label>
        <input type="datetime-local" class="form-control" id="visit_date" name="visit_date" required>
      </div>
      <div class="col-md-5 form-group">
        <label for="doctor_name">ทันตแพทย์</label>
        <input type="text" class="form-control" id="doctor_name" name="doctor_name" value="ทพญ.ใจดี">
      </div>
      <div class="col-md-3 form-group">
          <label>ความดัน (BP)</label>
          <div class="input-group">
            <input type="number" class="form-control" name="bp_sys" placeholder="SYS">
            <div class="input-group-prepend"><span class="input-group-text">/</span></div>
            <input type="number" class="form-control" name="bp_dia" placeholder="DIA">
          </div>
        </div>
    </div>

    <div class="form-group">
      <label for="clinical_notes">บันทึก / ข้อสังเกต (Clinical Notes)</label>
      <textarea class="form-control" id="clinical_notes" name="clinical_notes" rows="3"></textarea>
    </div>

    <hr>
    <h4>รายการหัตถการ</h4>
    <div class="row mb-2">
        <div class="col-md-5">
            <select id="procedure-select" class="form-control">
                <option value="">-- เลือกหัตถการ --</option>
                <% procedure_codes.forEach(proc => { %>
                    <option value="<%- proc.code %>" data-description="<%- proc.description %>" data-price="<%- proc.price %>"><%- proc.description %> (<%- proc.price %>)</option>
                <% }); %>
            </select>
        </div>
        <div class="col-md-2">
            <input type="text" id="tooth-no" class="form-control" placeholder="ซี่ฟัน (ถ้ามี)">
        </div>
        <div class="col-md-2">
            <button type="button" id="add-procedure" class="btn btn-primary">เพิ่มรายการ</button>
        </div>
    </div>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>รหัส</th>
          <th>รายการ</th>
          <th>ซี่ฟัน</th>
          <th>จำนวน</th>
          <th>ราคา/หน่วย</th>
          <th>ราคารวม</th>
          <th></th>
        </tr>
      </thead>
      <tbody id="procedures-table-body">
        <!-- Procedure items will be added here -->
      </tbody>
    </table>

    <hr>
    <h4>ไฟล์ X-Ray</h4>
    <div class="form-group">
        <input type="file" name="xrays" class="form-control-file" multiple>
    </div>

    <input type="hidden" name="procedures" id="procedures-input">

    <button type="submit" class="btn btn-success">บันทึกข้อมูล</button>
    <a href="/patients/<%= patient.id %>/history" class="btn btn-secondary">ยกเลิก</a>
  </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const visitDateInput = document.getElementById('visit_date');
        const now = new Date();
        now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
        visitDateInput.value = now.toISOString().slice(0,16);

        let procedures = [];
        const procSelect = document.getElementById('procedure-select');
        const toothNoInput = document.getElementById('tooth-no');
        const addBtn = document.getElementById('add-procedure');
        const tableBody = document.getElementById('procedures-table-body');
        const proceduresInput = document.getElementById('procedures-input');

        addBtn.addEventListener('click', () => {
            const selectedOption = procSelect.options[procSelect.selectedIndex];
            if(!selectedOption.value) return;

            const procedure = {
                code: selectedOption.value,
                description: selectedOption.dataset.description,
                tooth_no: toothNoInput.value,
                qty: 1,
                price_each: parseFloat(selectedOption.dataset.price)
            };
            procedures.push(procedure);
            renderTable();
            procSelect.selectedIndex = 0;
            toothNoInput.value = '';
        });

        function renderTable() {
            tableBody.innerHTML = '';
            procedures.forEach((p, index) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${p.code}</td>
                    <td>${p.description}</td>
                    <td>${p.tooth_no}</td>
                    <td>${p.qty}</td>
                    <td>${p.price_each.toFixed(2)}</td>
                    <td>${(p.qty * p.price_each).toFixed(2)}</td>
                    <td><button type="button" class="btn btn-danger btn-sm" onclick="removeProcedure(${index})">ลบ</button></td>
                `;
                tableBody.appendChild(row);
            });
            proceduresInput.value = JSON.stringify(procedures);
        }

        window.removeProcedure = function(index) {
            procedures.splice(index, 1);
            renderTable();
        }
    });
</script>
</body>
</html>
