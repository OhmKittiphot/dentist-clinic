# Server / App
PORT=80
NODE_ENV=production

# MySQL / RDS
DB_HOST=your-db-host.rds.amazonaws.com
DB_PORT=3306
DB_USER=youruser
DB_PASSWORD=yourpassword
DB_NAME=dentist
DB_POOL_SIZE=10
DB_SSL=true                  # ถ้าใช้ RDS + SSL (แนะนำ)
DB_SSL_CA=./certs/rds-ca.pem # ทางเลือก: path ใบรับรอง (ถ้าไม่ใส่ จะใช้ ./certs/rds-ca.pem)

# AWS S3
AWS_REGION=ap-southeast-1
S3_BUCKET=your-s3-bucket-name
S3_PREFIX=xrays              # (ทางเลือก) พาธย่อยในบัคเก็ต เช่น xrays/

# CDN (ถ้ามี CloudFront/โดเมนรูปของคุณเอง)
CDN_IMG_HOSTS=https://img.example.com,https://cdn.example.com
